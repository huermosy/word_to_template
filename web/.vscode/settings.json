{
  // 为所有语言设置默认缩进大小
  "editor.tabSize": 4,
  "editor.insertSpaces": true,

  // 禁用自动检测文件缩进的功能，强制使用上面的设置
  "editor.detectIndentation": false,

  // 为特定语言提供覆盖设置（可选，但推荐）
  "[html]": {
    "editor.tabSize": 4
  },
  "[javascript]": {
    "editor.tabSize": 4
  },
  "[typescript]": {
    "editor.tabSize": 4
  },
  "[css]": {
    "editor.tabSize": 4
  }
}